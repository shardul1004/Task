@{
    Layout = null;
}

@model SuperBazaar.Models.Bill
<html>
    <head>
        <title></title>
    <link href="~/css/HomePage.css" rel="stylesheet" />    
    </head>
    <body>
    

<h2>Shopping Cart</h2>

<table>
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice.ToString("c")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">Total:</td>
            <td>@Model.TotalAmount.ToString("C")</td>
        </tr>
    </tfoot>
</table>

<div style="margin-left: 15px;cursor: pointer;" onclick="window.print()">
    Print Bill
</div>
    </body>
</html>


